<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OrderHistoryFragment">

    <RelativeLayout
        android:id="@+id/rlOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtListHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/previous_order"
            android:textSize="16sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <View
            android:id="@+id/vline"
            android:layout_below="@+id/txtListHeader"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8A8A8A" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/vline"
            tools:listitem="@layout/order_history_custom_row"/>

    </RelativeLayout>

    <include layout="@layout/progressbar" />

    <RelativeLayout
        android:id="@+id/rlNoOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-56dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgEmptyCart"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/order_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgEmptyCart"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/no_order_history"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</FrameLayout>